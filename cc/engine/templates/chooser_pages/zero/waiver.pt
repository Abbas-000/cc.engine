<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="engine_template/macros/page"
      i18n:domain="cc_org">
  <head>
    <title metal:fill-slot="title">CC0: Waiver</title>

    <metal:headers fill-slot="headers">
      <link rel="stylesheet" type="text/css"
            href="http://yui.yahooapis.com/2.6.0/build/button/assets/skins/sam/button.css">

      <script type="text/javascript"
              src="http://yui.yahooapis.com/2.6.0/build/yahoo-dom-event/yahoo-dom-event.js"></script>
      <script type="text/javascript"
              src="http://yui.yahooapis.com/2.6.0/build/element/element-beta-min.js"></script>
      <script type="text/javascript"
              src="http://yui.yahooapis.com/2.6.0/build/button/button-min.js"></script>
      <script type="text/javascript"
              src="http://yui.yahooapis.com/2.6.0/build/container/container-min.js"></script>

      <link rel="stylesheet" type="text/css" href="zero.css"
	    tal:attributes="href python:request.staticdirect('/includes/zero.css')" />

      <script src="help.js" type="text/javascript"
              tal:attributes="src python:request.staticdirect('/includes/help.js')" >
      </script>

      <script type="text/javascript">
        YAHOO.namespace("cc.zero");

        YAHOO.cc.zero.on_click = function(event) {

        YAHOO.util.Dom.get("details-submit").disabled = !(
        YAHOO.util.Dom.get("confirm_details").checked &&
        YAHOO.util.Dom.get("confirm_understand").checked);

        } // on_click

        YAHOO.util.Event.onDOMReady(function() {

        // connect event handlers for the check boxes
        YAHOO.util.Event.addListener("confirm_details", "click", YAHOO.cc.zero.on_click);
        YAHOO.util.Event.addListener("confirm_understand", "click", YAHOO.cc.zero.on_click);

        });
      </script>

    </metal:headers>

  </head>

  <body>

    <metal:left fill-slot="sidebar">
    </metal:left>

    <metal:title fill-slot="page-header-title">CC0 Waiver</metal:title>

    <metal:body fill-slot="body">
      <div class="yui-skin-sam">

        <div id="waiver_ui" class="yui-module">
          <div class="bd">
            <p>
              <span tal:omit-tag=""
	            i18n:translate="license.zero.additional_metadata">
                These fields are optional, but will be embedded in the HTML
                generated for your work. This allows users of your work to
                determine how to contact you or where to go for more information
                about the work. 
              </span>
              <a href="" id="embedded_metadata" class="helpLink">
	        <img src="images/information.png"
	             tal:attributes="src python:request.staticdirect('/images/information.png')"
	             i18n:attributes="alt" alt="Information"/></a>
            </p>

            <div id="help_embedded_metadata" class="help_panel">
              <div class="hd" i18n:translate="">Embedded Metadata</div>
              <div class="bd" i18n:translate="license.zero.metadata_help">
	        <p>
	          The information is embedded in a software readable format.
	          This allows search engines to index additional information
	          about your work.
	        </p>
	        <p>
	          <a href="http://wiki.creativecommons.org/Metadata">More
	            information</a> on Creative Commons metadata is available if
	          you want to find out more.
	        </p>
              </div>
            </div>

            <form id="form-details" action="confirm">
              <input type="hidden" name="license-class" value="zero" />

              <div class="form-row">
	        <div class="form-question" 
	             i18n:translate="util.your_name">Your name</div>
	        <div class="form-answer"><input name="name"
					        class="form-field"/>
	        </div>
              </div>

              <div class="form-row">
	        <div class="form-question" 
	             i18n:translate="util.your_url">Your URL</div>
	        <div class="form-answer"><input name="actor_href"
					        class="form-field"/>
	          <a href="" id="url" class="helpLink">
	            <img src="images/information.png"
		         tal:attributes="src python:request.staticdirect('/images/information.png')"
		         i18n:attributes="alt" alt="Information"
		         /></a>
	        </div>
              </div>

              <div id="help_url" class="help_panel">
                <div class="hd" i18n:translate="util.your_url">Your URL</div>
                <div class="bd" i18n:translate="license.zero.your_url_help">
	          The URL where people can find more information about 
	          the work or the person using CC0.
                </div>
              </div>


              <div class="form-row">
	        <div class="form-question" 
	             i18n:translate="util.title_of_work">Title of work
	        </div>
	        <div class="form-answer">
	          <input name="work_title" class="form-field"/>
	        </div>
              </div>

              <div class="form-row">
	        <div class="form-question" 
	             i18n:translate="util.territory">Territory</div>
	        <div class="form-answer">
	          <select name="work_jurisdiction" class="form-field">
	            <option value="-">---</option>
	            <metal:country tal:repeat="c country_list">
	              <option value="code" tal:content="python: c[1]"
		              tal:attributes="value python:c[0]">territory</option>

	            </metal:country>
	          </select>

	          <a href="" id="country" class="helpLink">
	            <img src="images/information.png"
		         tal:attributes="src python:request.staticdirect('/images/information.png')"
		         i18n:attributes="alt" alt="Information"
		         /></a>
	        </div>
              </div>

              <div id="help_country" class="help_panel">
                <div class="hd" i18n:translate="util.territory">Territory</div>
                <div class="bd" i18n:translate="license.zero.country_help">
	          Jurisdiction from which the work is being offered under CC0.
                </div>
              </div>


              <div class="form-row">
	        <div class="form-question">
	          <input name="confirm" type="checkbox"
		         id="confirm_details" class="form-field"
		         value="confirm" />
	        </div>
	        <div class="form-answer">
	          <label for="confirm" 
		         i18n:translate="license.zero.confirm_waiver">
	            I hereby waive all copyright and related or neighboring
	            rights together with all associated claims and causes of
	            action with respect to this work to the extent possible
	            under the law.
	          </label>
	        </div>
              </div>

              <div class="form-row">
	        <div class="form-question">&nbsp;</div>
	        <div class="form-answer">
	          <iframe class="form-field" src="/publicdomain/zero/1.0/legalcode-plain">
	          </iframe>
	        </div>
              </div>

              <div class="form-row">
	        <div class="form-question">
	          <input name="understand" type="checkbox"
	                 id="confirm_understand" class="form-field"
	                 value="confirm" />
	        </div>
	        <div class="form-answer">
	          <label for="understand" 
		         i18n:translate="license.zero.confirm_reading">
	            I have read and understand the terms and intended legal
	            effect of CC0, and hereby voluntarily elect to apply it to
	            this work.
	          </label>
	        </div>
              </div>

              <div class="form-row">
	        <div class="form-question">&nbsp;</div>
	        <div class="form-answer">
	          <input type="submit" id="details-submit" disabled=""
		         name="field1" value="continue"
		         i18n:attributes="value util.continue;"> 
	        </div>
              </div>

            </form>

            <br clear="both"/>&nbsp;
          </div>
        </div>

      </div>
    </metal:body>

  </body>
</html>
